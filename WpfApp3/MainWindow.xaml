<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp3"
        Title="Smart Notes" Height="800" Width="1200"
        Background="{StaticResource BackgroundColor}">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель: категории -->
        <Border Style="{StaticResource CardStyle}" Padding="15">
            <StackPanel>
                <TextBlock Text="Категории" FontWeight="Bold" FontSize="18" Margin="0,0,0,20"/>
                <ListBox x:Name="CategoriesList" SelectionChanged="CategoriesList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontWeight="SemiBold" FontSize="14" Margin="10,5"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Правая панель -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Поиск -->
            <Border Style="{StaticResource CardStyle}" Padding="0" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox" Height="36" VerticalContentAlignment="Center" Padding="10" FontSize="14"
                             TextChanged="SearchBox_TextChanged"/>
                    <TextBlock x:Name="Placeholder" Text="Поиск заметок..." Foreground="Gray" IsHitTestVisible="False"
                               VerticalAlignment="Center" Padding="10"
                               Visibility="Visible"/>
                </Grid>
            </Border>

            <!-- Фильтры: Приоритет и Тег -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Приоритет:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                <ComboBox x:Name="FilterPriority" MinWidth="100" Margin="0,5,15,0" SelectionChanged="FilterPriority_SelectionChanged">
                    <ComboBoxItem Content="Все"/>
                    <ComboBoxItem Content="Низкий"/>
                    <ComboBoxItem Content="Средний"/>
                    <ComboBoxItem Content="Высокий"/>
                    </ComboBox>
                    <TextBlock Text="Тег:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="FilterTag" Width="120" Height="26" VerticalContentAlignment="Center" TextChanged="FilterTag_TextChanged"/>
            </StackPanel>

            <!-- Список заметок -->
            <ListView x:Name="NotesList" Grid.Row="2" Margin="0,0,0,15" SelectionChanged="NotesList_SelectionChanged"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="📌" Visibility="{Binding IsPinned, Converter={StaticResource BoolToVisConverter}}" 
                                                   Foreground="{StaticResource SecondaryColor}" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Content}" MaxHeight="60" TextTrimming="CharacterEllipsis" 
                                               Foreground="{StaticResource TextColor}" Margin="0,5,0,0" FontSize="14"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <!-- Категория -->
                                        <Border Background="#E3F2FD" Padding="4,2" CornerRadius="4" Margin="0,0,5,0">
                                            <TextBlock Text="{Binding Category}" FontSize="12"/>
                                        </Border>
                                        <!-- Приоритет с цветом -->
                                        <Border Padding="4,2" CornerRadius="4" Margin="0,0,5,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#E0E0E0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Priority}" Value="Низкий">
                                                            <Setter Property="Background" Value="#C8E6C9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Priority}" Value="Средний">
                                                            <Setter Property="Background" Value="#FFF9C4"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Priority}" Value="Высокий">
                                                            <Setter Property="Background" Value="#FFCDD2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Priority}" FontSize="12"/>
                                        </Border>
                                        <!-- Дата -->
                                        <TextBlock Text="{Binding ModifiedDate, StringFormat='dd.MM HH:mm'}" FontSize="12" Foreground="#888"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Кнопки -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="NewButton" Content="Новая" MinWidth="100" Height="27"/>
                <Button x:Name="EditButton" Content="Редактировать" MinWidth="120" Height="27" Margin="5,0"/>
                <Button x:Name="DeleteButton" Content="Удалить" MinWidth="100" Height="27" Margin="5,0"/>
                <Button x:Name="PinButton" Content="Закрепить" MinWidth="120" Height="27" Margin="5,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>