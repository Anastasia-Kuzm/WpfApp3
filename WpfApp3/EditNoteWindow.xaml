<Window x:Class="WpfApp3.EditNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Редактирование заметки" Width="800" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Text="Редактирование заметки" FontWeight="Bold" FontSize="20" Margin="0,0,0,15"/>

        <!-- Строка 1: Заголовок + Категория -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Заголовок:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="TitleBox" Grid.Column="1" Margin="5,0" Height="32" FontSize="14"/>
            <TextBlock Grid.Column="2" Text="Категория:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox x:Name="CategoryBox"
                      Grid.Column="3"
                      Height="32"
                      SelectedValuePath="."
                      DisplayMemberPath=".">
                <sys:String>Работа</sys:String>
                <sys:String>Личное</sys:String>
                <sys:String>Идеи</sys:String>
                <sys:String>Покупки</sys:String>
                <sys:String>Другое</sys:String>
            </ComboBox>
        </Grid>

        <!-- Строка 2: Приоритет + Теги -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Приоритет:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="PriorityBox"
                      Grid.Column="1"
                      Height="32"
                      SelectedValuePath="."
                      DisplayMemberPath=".">
                <sys:String>Низкий</sys:String>
                <sys:String>Средний</sys:String>
                <sys:String>Высокий</sys:String>
            </ComboBox>
            <TextBlock Grid.Column="2" Text="Теги:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox x:Name="TagsBox" Grid.Column="3" Height="32" FontSize="14"/>
        </Grid>

        <!-- Контент и предпросмотр -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Style="{StaticResource CardStyle}" Padding="0">
                <TextBox x:Name="ContentBox" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="14"/>
            </Border>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>
            <Border Style="{StaticResource CardStyle}" Padding="0">
                <GroupBox Header="Предпросмотр" Margin="0">
                    <TextBlock x:Name="PreviewText" TextWrapping="Wrap" FontSize="14"/>
                </GroupBox>
            </Border>
        </Grid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="CancelButton" Content="Отмена" MinWidth="100" Margin="0,0,10,0" Height="31"/>
            <Button x:Name="SaveButton" Content="Сохранить" MinWidth="100" Background="{StaticResource SecondaryColor}" Height="34"/>
        </StackPanel>
    </Grid>
</Window>